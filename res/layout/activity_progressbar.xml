<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:martin="http://schemas.android.com/apk/res/com.martin.view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.martin.view.HorizontalProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:progress="10"
        martin:progressBar_reach_color="#ff0000"
        martin:progressBar_text_color="#ff0000"
        martin:progressBar_text_size="16sp"
        martin:progressBar_unreach_color="#44ff0000" >
    </com.martin.view.HorizontalProgressBar>

    <com.martin.view.HorizontalProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:progress="100" >
    </com.martin.view.HorizontalProgressBar>

</LinearLayout>